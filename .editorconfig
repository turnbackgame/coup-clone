; https://editorconfig.org
root = true

; default configuration
[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = unset

[{*.nix,flake.lock}]
indent_style = space
indent_size = 2

[*.{yml,yaml,toml}]
indent_style = space
indent_size = 2

[*.{html,css,js,mjs}]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2

[*.gleam]
indent_style = space
indent_size = 2
